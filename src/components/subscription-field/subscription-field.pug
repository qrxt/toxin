include ../text-field/text-field.pug
include ../../pug/mixins.pug

mixin subscription-field(subscriptionFieldObj)
  -
    const {
      className,
      placeholder,
      name,
      label,
      rightLabel
    } = subscriptionFieldObj

  +text-field({
    className: `subscription-field ${className}`,
    placeholder: placeholder,
    name: name,
    label: label,
    rightLabel: rightLabel,
    ariaLabel: "Ваш адрес электронной почты",
    type: "email"
  })
    button.subscription-field__btn(aria-label="Подтвердить подписку")
      +svg("arrow_forward", 18, 18)
