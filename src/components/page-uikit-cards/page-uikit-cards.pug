mixin first-column()
  .uikit-cards__column
    +card({
      className: "uikit-cards__hotel"
    })
      form.uikit-cards__hotel-form(
        action="https://echo.htmlacademy.ru/"
        method="POST")
        h2.uikit-cards__card-title
          | Найдём номера под ваши пожелания
        .uikit-cards__inputs-wrapper
          .uikit-cards__input-half
            +date-dropdown({
              className: "uikit-cards__left-date js-uikit-cards-arrival",
              label: "Прибытие",
              name: "user-arrival"
            })
          .uikit-cards__input-half
            +date-dropdown({
              className: "uikit-cards__right-date js-uikit-cards-check-out",
              label: "Выезд",
              name: "user-check-out"
            })
        .uikit-cards__guests
          +dropdown-guests({
            className: "uikit-cards__guests-dropdown js-uikit-cards-hotel-guests",
            label: "Гости",
            title: "Сколько гостей"
          })
            +input-quantity({
              className: "uikit-cards__quantity-input",
              label: "Взрослые",
              initialValue: 0,
              min: 0,
              max: 4,
              name: "user-guests-adults"
            })
        +btn({
          className: "uikit-cards__hotel-submit",
          type: "submit"
        })
          | Подобрать номер
          +svg("arrow_forward", 15, 15)

    +card-sign-up({
      className: "uikit-cards__register"
    })

mixin second-column()
  .uikit-cards__column
    +card({
      className: "uikit-cards__book"
    })
      form.uikit-cards__book-form(
        action="https://echo.htmlacademy.ru/"
        method="POST")
        h2.visually-hidden
          | Забронировать номер в отеле

        +hotel-room-number({
          className: "uikit-cards__book-header",
          roomNumber: "888",
          roomCategory: "Люкс"
        })
          p.uikit-cards__cost
            | 9 990₽
            span.uikit-cards__cost-per
              | в сутки

        .uikit-cards__inputs-wrapper
          .uikit-cards__input-half
            +date-dropdown({
              className: "uikit-cards__left-date js-uikit-cards-book-arrival",
              label: "Прибытие",
              name: "user-arrival"
            })
          .uikit-cards__input-half
            +date-dropdown({
              className: "uikit-cards__right-date js-uikit-cards-book-check-out",
              label: "Выезд",
              name: "user-check-out"
            })

        .uikit-cards__book-guests
          +dropdown-guests({
            className: "uikit-cards__guests-dropdown js-uikit-cards-book-guests",
            label: "Гости",
            title: "Сколько гостей"
          })
            +input-quantity({
              className: "uikit-cards__quantity-input",
              label: "Взрослые",
              initialValue: 3,
              min: 0,
              max: 4,
              name: "user-guests-adults"
            })

        +bill({
          className: "uikit-cards__bill",
          rowsClassName: "uikit-cards__bill-row",
          rows: [
            {
              key: "9 990₽ х 4 суток",
              value: "39 960₽"
            },

            {
              key: "Сбор за услуги: скидка 2 179₽",
              value: "0₽",
              hint: "Текст всплывающей подсказки"
            },

            {
              key: "Сбор за дополнительные услуги",
              value: "300₽",
              hint: "Текст другой всплыващей подсказки"
            }
          ]
        })
        +total({
          className: "uikit-cards__bill-total",
          value: "38 081₽"
        })
        +btn({
          className: "uikit-cards__book-submit",
          type: "submit"
        })
          | Забронировать
          +svg("arrow_forward", 15, 15)

    +card-sign-in({
      className: "uikit-cards__auth"
    })

mixin third-column()
  .uikit-cards__column.uikit-cards__column--narrow
    +card({
      className: "uikit-cards__calendar"
    })
      +text-field({
        className: "uikit-cards__calendar-input js-uikit-cards-calendar",
        type: "date",
        interactLike: "date",
        placeholder: "ДД.ММ.ГГГГ",
        name: "user-date",
        inputClass: "visually-hidden--always"
      })

    +card-hotel-room({
      className: "uikit-cards__hotel-room js-uikit-room-first",
      roomImages: [
        {
          src: "./assets/img/hotel-room-1.png",
          alt: "Просторная спальня"
        },

        {
          src: "./assets/img/hotel-room-2.png",
          alt: "Другая спальня"
        },

        {
          src: "./assets/img/hotel-room-2.png",
          alt: "Еще спальня"
        },

        {
          src: "./assets/img/hotel-room-2.png",
          alt: "Опять спальня"
        }
      ],

      roomNumber: "888",
      roomCategory: "Люкс",
      roomCost: "9 990₽",
      roomCostPer: "В сутки",
      initialRating: 5,
      ratingName: "rating-room-first",
      reviewsQuantity: "145"
    })

    +card-hotel-room({
      className: "uikit-cards__hotel-room js-uikit-room-second",
      roomImages: [
        {
          src: "./assets/img/hotel-room-2.png",
          alt: "Просторная спальня"
        },

        {
          src: "./assets/img/hotel-room-1.png",
          alt: "Другая спальня"
        },

        {
          src: "./assets/img/hotel-room-2.png",
          alt: "Еще спальня"
        },

        {
          src: "./assets/img/hotel-room-2.png",
          alt: "Опять спальня"
        }
      ],

      roomNumber: "840",
      roomCost: "9 900₽",
      roomCostPer: "В сутки",
      initialRating: 4,
      ratingName: "rating-room-second",
      reviewsQuantity: "65"
    })

main.page-main
  section.uikit-cards
    .wrapper.uikit-cards__inner
      h1.visually-hidden
        | UI-Kit Cards

      +first-column()
      +second-column()
      +third-column()
