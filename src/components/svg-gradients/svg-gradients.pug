mixin svg-gradients()
  svg.svg-gradients
    defs
      g.svg-gradients__purple
        linearGradient(id="gradient-purple")
          stop(offset="0%" stop-color="#BC9CFF")
          stop(offset="100%" stop-color="#8BA4F9")

      g.svg-gradients__purple-reversed
        linearGradient(id="gradient-purple-reversed")
          stop(offset="0%" stop-color="#8BA4F9")
          stop(offset="100%" stop-color="#BC9CFF")

      g.svg-gradients__purple-animation
        linearGradient(id="gradient-purple-animation")
          stop(offset="0%" stop-color="#C7C7D0")
          stop(offset="100%" stop-color="#C7C7D0")
