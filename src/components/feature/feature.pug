include ../../pug/mixins.pug

mixin feature(featureObj)
  -
    const {
      className,
      iconName,
      title,
      labelText
    } = featureObj

  article.feature(class=className)
    .feature__wrapper
      h3.feature__title
        | #{ title }
      p.feature__label
        | #{ labelText }
    +svg(iconName, 48, 48)
