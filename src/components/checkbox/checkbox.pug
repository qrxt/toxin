//- include ../svg-gradients/svg-gradients
include ../../pug/mixins

mixin checkbox(checkboxObj)
  -
    const {
      className,
      labelText,
      checked
    } = checkboxObj

  label(class=className).checkbox
    | #{ labelText }
    input.visually-hidden--always(
      type="checkbox",
      checked=checked || false
    )
    span.checkbox__box
      +svg("checkbox-tick", 15, 15)
