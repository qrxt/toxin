include ../../pug/mixins.pug

mixin btn(btnObj)

  -
    const {
      className,
      isLink,
      type,
      href,
      isDisabled,
      ariaLabel
    } = btnObj

  if isLink
    a.btn(
      class=className
      href=href
      aria-label=ariaLabel)

      block

  if !isLink
    button.btn(
      class=className
      type=type
      disabled=isDisabled
      aria-label=ariaLabel)

      block

mixin btn-like(btnLikeObj)
  -
    const {
      className,
      initialValue,
      toggled
    } = btnLikeObj

    const classList = toggled
      ? `btn--bordered btn--active btn--like ${ className }`
      : `btn--bordered btn--like ${ className }`;

  +btn({
    className: classList,
    type: "button",
    ariaLabel: "Мне нравится"
  })
    +svg("icon-favorite", 20, 20)
    span
      | #{ initialValue }
