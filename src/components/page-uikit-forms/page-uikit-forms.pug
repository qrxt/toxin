include ../input-text/input-text
include ../input-accordion/input-accordion
include ../input-wrapper/input-wrapper

main.page-main
  section.uikit-forms
    .wrapper.uikit-forms__inner
      h1.visually-hidden
        | UI-Kit Forms

      form.uikit-forms__form(action="#")
        .uikit-forms__form-wrapper
          +input-text({
            className: "uikit-forms__input",
            type: "email",
            label: "Text Field",
            rightLabel: "Default",
            placeholder: "Email",
          })

          +input-text({
            className: "input-text--focused uikit-forms__input",
            type: "email",
            label: "Text Field",
            rightLabel: "Hover / Focus",
            placeholder: "Email",
            value: "This is pretty awesome"
          })

          +input-accordion({
            className: "uikit-forms__select",
            label: "Dropdown",
            rightLabel: "Default"
          })
            span Lorem ipsum dolor sit amet.

          +input-text({
            className: "uikit-forms__input",
            type: "date",
            interactLike: "date",
            label: "Masked Text Field",
            rightLabel: "Default",
            placeholder: "ДД.ММ.ГГГГ",
          })

