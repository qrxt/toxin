mixin first-column()
  .uikit-forms__column
    +text-field(emailTextField)

    +text-field(textFieldfocused)

    +dropdown(guestsDropdown)
      //- guests dropdown

    +text-field(maskedTextField)

    +input-wrapper({
      className: "uikit-forms__double",
      itemsQuantity: 2
    })
      +date-dropdown(dateDropdownFirst)

      +date-dropdown(dateDropdownSecond)

    +date-dropdown(dateRangeDropdown)

    +subscription-field(subscriptionField)

    +dropdown-rooms(roomsDropdown)
      each inputQuantity in inputQuantities
        +input-quantity(inputQuantity)

    +dropdown-rooms(roomsDropdownExpanded)
      each inputQuantity in inputQuantities
        +input-quantity(inputQuantity)


    .uikit-forms__input-75
      +expandable-list(expandableList)
        each checkbox in expandableCheckboxList
          +checkbox(checkbox)

    .uikit-forms__input-75
      +expandable-list(expandableListExpanded)
        each checkbox in expandableCheckboxList
          +checkbox(checkbox)

    .uikit-forms__input-75
      each feature in features
        +feature(feature)

mixin second-column()
  .uikit-forms__column
    .uikit-forms__input-75.uikit-forms__check-buttons
      +labeled({
        className: "uikit-forms__check-buttons-label",
        label: "Checkbox Buttons",
        tagName: "p"
      })
      .uikit-forms__checkbox-buttons
        each checkboxButton in checkboxButtonsList
          +checkbox(checkboxButton)

    .uikit-forms__input-75.uikit-forms__radios
      +labeled({
        className: "uikit-forms__radio-buttons-label",
        label: "Radio Buttons",
        tagName: "p"
      })
      .uikit-forms__radio-buttons
        each radio in radios
          +radio(radio)

    .uikit-forms__input-75.uikit-forms__toggles
      +labeled({
        className: "uikit-forms__radio-buttons-label",
        label: "Toggle",
        tagName: "p"
      })
      each toggle in toggles
        +toggle(toggle)


