include ../logo/logo.pug
include ../site-list/site-list.pug

mixin header(headerObj)
  -
    const {
      className,
      authorization
    } = headerObj
  header.header(class=className)
    .wrapper.header__inner
      nav.header__nav
        +logo({
          className: "header__logo",
          isFull: true,
          link: "#"
        })

        +site-list({
          className: "header__site-list",
          authorization
        })
