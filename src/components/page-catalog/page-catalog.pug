main.page-catalog
  h1.visually-hidden
    | Главная страница Toxin

  section.page-catalog__promo
    .wrapper.page-catalog__promo-inner
      .page-catalog__side-menu
        form.page-catalog__side-menu-form(
          action="https://echo.htmlacademy.ru/"
          method="GET")
        +date-dropdown({
          className: "page-catalog__range js-page-catalog-dates-range",
          label: "Даты пребывания в отеле",
          name: "user-dates-range",
          startValue: "19 авг - 23 авг"
        })

        +dropdown-guests({
          className: "page-catalog__guests js-page-catalog-guests",
          label: "Гости"
        })
          +input-quantity({
            className: "page-catalog__quantity-input",
            label: "Взрослые",
            initialValue: 2,
            min: 0,
            max: 4
          })

          +input-quantity({
            className: "page-catalog__quantity-input",
            label: "Дети",
            initialValue: 1,
            min: 0,
            max: 4
          })

          +input-quantity({
            className: "page-catalog__quantity-input",
            label: "Младенцы",
            initialValue: 1,
            min: 0,
            max: 3
          })

        .page-catalog__price-range-wrapper
          +range({
            className: "page-catalog__price-range js-page-catalog-price-range",
            labelText: "Диапазон Цены"
          })
          p.page-catalog__price-range-description
            | Стоимость за сутки пребывания в номере

        +labeled({
          className: "page-catalog__check-buttons-label",
          label: "Checkbox Buttons",
          tagName: "p"
        })
        .page-catalog__checkbox-buttons
          +checkbox({
            className: "page-catalog__checkbox",
            labelText: "Можно курить",
            checked: false,
            name: "hotel-room-smoking"
          })
          +checkbox({
            className: "page-catalog__checkbox",
            labelText: "Можно с питомцами",
            checked: true,
            name: "hotel-room-pets"
          })
          +checkbox({
            className: "page-catalog__checkbox",
            labelText: "Можно пригласить гостей (до 10 человек)",
            checked: true,
            name: "hotel-room-guests"
          })

        +labeled({
          className: "page-catalog__rich-checks-label",
          label: "Доступность",
          tagName: "p"
        })
        .page-catalog__checkbox-buttons
          +rich-checkbox({
            labelText: "Широкий коридор",
            description: "Ширина коридоров в номере не\u00A0менее 91 см.",
            name: "hotel-room-corridor"
          })
          +rich-checkbox({
            labelText: "Помощник для инвалидов",
            description: "На 1 этаже вас встретит специалист и проводит до номера.",
            name: "hotel-room-helper"
          })

        +dropdown-rooms({
          className: "page-catalog__rooms-dropdown js-catalog-dropdown-rooms",
          label: "Удобства номера"
        })
          +input-quantity({
            className: "page-catalog__quantity-input",
            label: "Спальни",
            initialValue: 2,
            min: 1,
            max: 4
          })
          +input-quantity({
            className: "page-catalog__quantity-input",
            label: "Кровати",
            initialValue: 2,
            min: 1,
            max: 6
          })
          +input-quantity({
            className: "page-catalog__quantity-input",
            label: "Ванные комнаты",
            initialValue: 0,
            min: 0,
            max: 2
          })

        +expandable-list({
          className: "page-catalog__additional-options js-page-catalog-expandable",
          header: "Дополнительные удобства"
        })
          +checkbox({
            className: "page-catalog__checkbox",
            labelText: "Завтрак",
            checked: false,
            name: "hotel-room-additional-breakfast"
          })
          +checkbox({
            className: "page-catalog__checkbox",
            labelText: "Письменный стол",
            checked: true,
            name: "hotel-room-additional-table"
          })
          +checkbox({
            className: "page-catalog__checkbox",
            labelText: "Стул для кормления",
            checked: true,
            name: "hotel-room-additional-chair"
          })
          +checkbox({
            className: "page-catalog__checkbox",
            labelText: "Кроватка",
            checked: true,
            name: "hotel-room-additional-cot"
          })
          +checkbox({
            className: "page-catalog__checkbox",
            labelText: "Телевизор",
            checked: false,
            name: "hotel-room-additional-tv"
          })
          +checkbox({
            className: "page-catalog__checkbox",
            labelText: "Шампунь",
            checked: false,
            name: "hotel-room-additional-shampoo"
          })
          +checkbox({
            className: "page-catalog__checkbox",
            labelText: "Телевизор",
            checked: false,
            name: "hotel-room-tv-again"
          })
          +checkbox({
            className: "page-catalog__checkbox",
            labelText: "Шампунь",
            checked: false,
            name: "hotel-room-additional-shampoo-again"
          })


