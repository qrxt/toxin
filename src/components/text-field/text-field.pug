include ../labeled/labeled.pug

mixin text-field(textInputObj)
  -
    const {
      type,
      name,
      className,
      label,
      rightLabel,
      placeholder,
      inputmode,
      value,
      required
    } = textInputObj

  p.text-field(class=className)
    +labeled({
      className: "text-field",
      label: label,
      rightLabel: rightLabel
    })
      input(
        type=type || "text"
        name=name
        placeholder=placeholder
        inputmode=inputmode
        value=value
        required=required)
      block
