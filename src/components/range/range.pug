mixin range(rangeObj)
  -
    const {
      className,
      min = 0,
      max = 10000,

      leftValue = 0,
      rightValue = 10000

    } = rangeObj;

  .range(
    class=className)

    +labeled({
      className: "uikit-forms__range-label",
      label: "Range Slider",
      rightLabel: `${ leftValue }₽ - ${ rightValue }₽`,
      tagName: "p"
    })
    .range__slider(

      data-min=min
      data-max=max
      data-left=leftValue
      data-right=rightValue)
